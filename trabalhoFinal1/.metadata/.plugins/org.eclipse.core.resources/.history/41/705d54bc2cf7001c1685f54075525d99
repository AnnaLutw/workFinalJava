package trabalhoFinal;

import java.io.*;
import java.nio.file.Path;
import java.nio.file.Paths;
import java.util.Scanner;


public class trabalhoFinal {
    	static Scanner entrada = new Scanner(System.in);
    
	 	static int i = 0, totalVendas, comprar;;
	    static int[][] estoque = new int[4][4];
	    
	public static boolean temEstoque(int[][] estoque, int variavel) { // metodo que verifica se o produto está em estoque ou não
		boolean temEstoque;
		
		if(estoque[variavel][0] > 0) {
			temEstoque = true;
		}
		else {
			temEstoque = false;
		}
		
		return temEstoque;
	}
	
	
	public static void comprar(int[][] estoque) { // metodo criado para simular um cliente comprando
		int venda, i = 1;
		
		while(i == 1) {
			
			System.out.println("Esolha qual mascara deseja comprar:\n 0-Infantil lisa\n 1- intantil com estampa\n 2- adulto lisa"
					+ "\n 3- adulto com estampa ");
			venda = entrada.nextInt();
			
			boolean temEstoque = temEstoque(estoque,venda);
			if(temEstoque == true) {
				estoque[venda][0] = estoque[venda][0] - 1;
				System.out.println("Produto vendido");
				estoque[venda][3] += 1;
				System.out.println("Agora a quantidade de mascara " + venda + " em estoque é de: " + estoque[venda][0]);
			}
			else {
				System.out.println("Produto não está disponivel no estoque");
			}
			
			System.out.println("Digite 1 caso queira fazer com nova compra, ou 0 caso queira parar de comprar");
			i = entrada.nextInt();
		}
	}

	public static void main(String[] args) throws IOException
	{	int controle=0;
	   try {
		Scanner ler = inicializar();
		
		while(controle!=10) {
			
			System.out.println("Sistema de Vendas");
			System.out.println("Digite 1 para exibir relatorio de vendas e lucro");
			System.out.println("Digite 2 para exibir relatorio de mascaras em estoque");
			System.out.println("Digite 3 para realizar venda");
			System.out.println("Digite 10 para sair");
			controle = entrada.nextInt();
			switch(controle) {
			
			case 1:
				relatorioVendasLucro();
				break;
			case 2:
				relarioEstoque();
				break;
			case 3:
				comprar(estoque);
				break;
			case 10:
				System.out.println("Saindo");
					
			}
		}
		 ler.close(); 
	   	}
	   catch(IOException e) {
		   System.out.println("Invalido");
		   e.printStackTrace();
	   }
		entrada.close();
	   
	}

	private static int lucro(int[] produto) {
		int lucro= (produto[2]-produto[1])* produto[3];
		
		return lucro;
	}

	private static void relarioEstoque() {
		System.out.println("O estoque de mascaras infantil lisa é: " + estoque[0][0] 
				+ " \nO estoque de mascaras infantil estampada é: " + estoque[1][0] 
				+ " \nO estoque de mascaras adulto lisa é: " + estoque[2][0] 
				+ " \nO estoque de mascaras adulto estampada é: " + estoque[3][0]);
	}
	
	public static void relatorioVendasLucro() {
		totalVendas = estoque[0][3] + estoque[1][3] + estoque[2][3] + estoque [3][3];
		System.out.println("O total de mascaras infantil lisa vendidas hoje foi de: " + estoque[0][3] + " e o lucro foi de: " + lucro(estoque[0])
				+ " \nO total de mascaras infantil estampada vendidas hoje foi de: " + estoque[1][3] + " e o lucro foi de: " + lucro(estoque[1])
				+ " \nO total de mascaras adulto lisa vendidas hoje foi de: " + estoque[2][3] + " e o lucro foi de: " + lucro(estoque[2])
				+ " \nO total de mascaras adulto estampada vendidas hoje foi de: " + estoque[3][3] + " e o lucro foi de: " + lucro(estoque[3])
				+ " \nQuantidade de mascaras de todos nos tipos vendidas hoje: " + totalVendas);
		
		try {
			FileWriter relatorios = new FileWriter("C:\\temp\\relatorioVendaLucro.txt", true);
			relatorios.write(relatorioVendasLucro);
			
			
			
		} catch (IOException e) {
			e.printStackTrace();
		}
	}

	private static Scanner inicializar() throws IOException {
		estoque [0][3] = 0;
		estoque [1][3] = 0;
		estoque [2][3] = 0;
		estoque [3][3] = 0;
	    Path arquivo = Paths.get("C:\\temp\\estoqueMascara.txt");
		Scanner ler = new Scanner(arquivo);
		while (ler.hasNextLine()) 
		{
			String[] dadosProdutos = ler.nextLine().split(";");
			       estoque[i][0] = Integer.parseInt(dadosProdutos[0]);
			       estoque[i][1] = Integer.parseInt(dadosProdutos[1]);
			       estoque[i][2] = Integer.parseInt(dadosProdutos[2]);
			       i++;
		}
			//System.out.println("mascara infantil lisa Estoque: " + estoque[0][0] + " Preço de compra: " + estoque[0][1] + " Preço de venda: " + estoque[0][2]);
			//System.out.println("mascara infantil estampada Estoque: " + estoque[1][0] + " Preço de compra: " + estoque[1][1] + " Preço de venda: " + estoque[1][2]);
			//System.out.println("mascara adulto lisa Estoque: " + estoque[2][0] + " Preço de compra: " + estoque[2][1] + " Preço de venda: " + estoque[2][2]);
			//System.out.println("mascara adulto estampada Estoque: " + estoque[3][0] + " Preço de compra: " + estoque[3][1] + " Preço de venda: " + estoque[3][2]);
		return ler;
	 	
	}
}


